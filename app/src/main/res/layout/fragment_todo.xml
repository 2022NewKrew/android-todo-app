<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/isDoneCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/titleEv"
        app:layout_constraintBottom_toBottomOf="@id/titleEv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/titleEv"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/titleIv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/titleEv"
        app:layout_constraintTop_toTopOf="@+id/titleEv"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_title_24" />

    <EditText
        android:id="@+id/titleEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:hint="Title" />

    <ImageView
        android:id="@+id/contentIv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/contentEv"
        app:layout_constraintTop_toTopOf="@+id/contentEv"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_text_snippet_24" />

    <EditText
        android:id="@+id/contentEv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleEv"
        app:layout_constraintBottom_toTopOf="@id/timestampTv"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:hint="Add Todo" />

    <ImageView
        android:id="@+id/timestampIv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/timestampTv"
        app:layout_constraintTop_toTopOf="@+id/timestampTv"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_access_time_24"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/timestampTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/isDoneCb"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:text="YYYY.MM.DD HH:mm"
        android:visibility="invisible"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>